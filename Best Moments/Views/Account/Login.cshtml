@model Best_Moments.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<style>
        /* styles for validation helpers */
.field-validation-error {
    color: darkorange;
    font-weight: bold;
}

.field-validation-valid {
    display: none;
}

input.input-validation-error {
    border: 1px solid darkorange;
}

input[type="checkbox"].input-validation-error {
    border: 0 none;
}

.validation-summary-errors {
    color: darkorange;
    font-weight: bold;
    font-size: 1.1em;
}

.validation-summary-valid {
    display: none;
}
/* styles for validation helpers */
.SettingForm 
{
margin:25px;
margin-left:auto;
margin-right:auto;
max-width: 500px;
background: #FFF;
padding: 30px 30px 20px 30px;
box-shadow: rgba(187, 187, 187, 1) 0 0px 20px -1px;
-webkit-box-shadow: rgba(187, 187, 187, 1) 0 0px 20px -1px;
font: 12px Arial, Helvetica, sans-serif;
color: #666;
border-radius: 10px;
-webkit-border-radius: 10px;
}
.SettingForm h1 
{
font: 24px "Trebuchet MS", Arial, Helvetica, sans-serif;
padding: 0px 0px 10px 40px;
display: block;
border-bottom: 1px solid #F5F5F5;
margin: -10px -30px 10px -30px;
color: darkorange;
}

.SettingForm .TXT{
    color: #555;
    width: 70%;
    padding: 3px 0px 3px 5px;
    margin-top: 2px;
    margin-right: 6px;
    margin-bottom: 16px;
    border: 1px solid #e5e5e5;
    background: #fbfbfb;
    height: 25px;
    line-height:15px;
    outline: 0;
    -webkit-box-shadow: inset 1px 1px 2px rgba(200,200,200,0.2);
    box-shadow: inset 1px 1px 2px rgba(200,200,200,0.2);
}
.RM 
{
    color:darkorange;
    margin:2px;
    position:relative;
    bottom:2px;
}
</style>

<div class="SettingForm">
    <h1>Login</h1>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

                @Html.TextBoxFor(m => m.UserName,new { @class = "TXT" , placeholder = "User Name" })
                @Html.PasswordFor(m => m.Password,new { @class = "TXT" , placeholder = "Password" })
                <br />
                @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe,new { @class = "RM"})
                <br />
                
        <input type="submit" value="Login" class="btn btn-primary" />
                <br />
                <br />
      
    <h4>
        @Html.ActionLink("Register", "Register") | @Html.ActionLink("Forgot Password", "ForgotPassword") 
    </h4>
}
</div>
