@model Best_Moments.Models.LocalPasswordModel
<style>
.SettingForm 
{
margin:25px;
margin-left:auto;
margin-right:auto;
max-width: 500px;
background: #FFF;
padding: 30px 30px 20px 30px;
box-shadow: rgba(187, 187, 187, 1) 0 0px 20px -1px;
-webkit-box-shadow: rgba(187, 187, 187, 1) 0 0px 20px -1px;
font: 12px Arial, Helvetica, sans-serif;
color: #666;
border-radius: 10px;
-webkit-border-radius: 10px;
}
.SettingForm h1 
{
font: 24px "Trebuchet MS", Arial, Helvetica, sans-serif;
padding: 0px 0px 10px 40px;
display: block;
border-bottom: 1px solid #F5F5F5;
margin: -10px -30px 10px -30px;
color: #969696;
}

.SettingForm .TXT{
    color: #555;
    width: 70%;
    padding: 3px 0px 3px 5px;
    margin-top: 2px;
    margin-right: 6px;
    margin-bottom: 16px;
    border: 1px solid #e5e5e5;
    background: #fbfbfb;
    height: 25px;
    line-height:15px;
    outline: 0;
    -webkit-box-shadow: inset 1px 1px 2px rgba(200,200,200,0.2);
    box-shadow: inset 1px 1px 2px rgba(200,200,200,0.2);
}
</style>
<div class="SettingForm">
<h1>Change password</h1>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
        
                @Html.PasswordFor(m => m.OldPassword,new { @class = "TXT" , placeholder = "Current Password" })
            
                @Html.PasswordFor(m => m.NewPassword,new { @class = "TXT" , placeholder = "New Password" })
        
                @Html.PasswordFor(m => m.ConfirmPassword,new { @class = "TXT" , placeholder = "Confirm Password" })
            
        <input type="submit" value="Change Password" class="btn btn-primary" />
}
</div>